<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "
-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
		
	<class name="locadora.model.Reserva">
		<id name="id" column="reserva_id" type="java.lang.Long">
			<generator class="native"></generator>
		</id>	
		
		<property name="dataDevolucao"/>	
		<property name="dataRetirada"/>
		<property name="multa"/>	
		<property name="valor"/>  
		
	 	 <join table="Reserva_Cliente" optional="true">
        		<key column="reserva_id" unique="true"></key>     
        		<many-to-one name="desconto" column="desconto_id" not-null="true" unique="true"></many-to-one>
        </join>
	   
	     <set name="automoveis" table="reservaAutomoveis">
		        <key column="reserva_id"/>		
		         <ma column="automovel_id" class="locadora.model.automovel.Automovel"/>
         	     
         </set>	
         
           <set name="automoveis" table="reservaAutomoveis" inverse="true">
			<key column="automovel_id"/>
			<many-to-many class="locadora.model.automovel.Automovel" column="automovel_id" />
	  </set> 	
	
	 	    
				
		
	</class>

</hibernate-mapping>