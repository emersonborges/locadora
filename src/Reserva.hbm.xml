<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "
-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
		
	<class name="locadora.model.Reserva">
		<id name="id" column="reserva_id" type="java.lang.Long">
			<generator class="increment"></generator>
		</id>	
		
		<property name="dataDevolucao"/>	
		<property name="dataRetirada"/>
		<property name="multa"/>	
		<property name="valor"/>  
		
	
	    <one-to-one name="cliente" class="locadora.model.Pessoa" constrained="true" cascade="save-update"/>	    
	
	    
	    <one-to-one name="Automovel" class="locadora.model.automovel.Automovel" constrained="true" cascade="save-update">
	    </one-to-one>
				
		
	</class>

</hibernate-mapping>