<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "
-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
		
	<class name="locadora.model.adicional.Adicional">
		
		<id name="id" column="adicional_id" type="java.lang.Long">
			<generator class="increment"></generator>
		</id>	
		
		<property name="decricao"></property>
		
				
		 <set name="automoveis" table="AdicionaisAutomovel">
			<key column="adicional_id"/>
			<many-to-many class="locadora.model.adicional.Adicional" column="automovel_id"/>
		</set> 
		
		
		
	</class>

</hibernate-mapping>