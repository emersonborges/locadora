<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "
-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
		
	<class name="locadora.model.automovel.Automovel">
		<id name="id" column="automovel_id" type="java.lang.Long">
			<generator class="increment"></generator>
		</id>	
		
		<property name="ano"/>	
		<property name="capacidade"/>
		<property name="chassi"/>
		<property name="codCategoria"/>
		<property name="consumo"/>		
		<property name="cor"></property>
		<property name="modelo"></property>
		<property name="placa"></property>
		<property name="preco"></property>
		<property name="status"></property>				

	   <!--  <many-to-one name="adicionais" class="locadora.model.adicional.Adicional" foreign-key="adicional_id" cascade="save-update">		
	    </many-to-one>  --> 
	    
	 <!--  <many-to-one name="categorias" foreign-key="ategoria_id" cascade="save-update" >	    
	    </many-to-one> -->  
	  
	 <set name="categorias" table="CategoriaAutomovel" inverse="true">
			<key column="automovel_id"/>
			<many-to-many class="locadora.model.automovel.Categoria" column="categoria_id"  />
	  </set>  
	  
	  <set name="adicionais" table="AdicionaisAutomovel" inverse="true">
			<key column="automovel_id"/>
			<many-to-many class="locadora.model.adicional.Adicional" column="adicional_id" />
	  </set>   
	  		
	</class>

</hibernate-mapping>