<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "
-//Hibernate/Hibernate Mapping DTD 2.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>	
		
	<class name="Pessoa">
		<id column="" name="id" type="java.lang.Long">
			<generator class="increment"></generator>
		</id>	
		<property name="celular"/>	
		<property name="cep"/>
		<property name="cpf"/>
		<property column="data_nasc" type="java.util.Date"</property>
		<property name="email"></property>
		<property name="endereco"></property>
		<property name="nome"></property>
		<property name="nomeMae"></property>
		<property name="nomePai"></property>
		<property name="rg"></property>
		<property name="telefone"></property>			
		
	</class>

</hibernate-mapping>